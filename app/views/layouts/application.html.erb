<!DOCTYPE html>
<html>
<head>
  <title>SquirrelOverflow</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <%= favicon_link_tag 'squirrel.ico' %>
</head>
<div class="navbar navbar-default navbar-fixed-top">
  <div class="container">
    <div class="navbar-header">
        <%= link_to "Squirrel Overflow", root_path, class: "navbar-brand" %>
        <button class="navbar-toggle" type="button" data-toggle="collapse" data-target="#navbar-main">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
    </div>
    <div class="navbar-collapse collapse" id="navbar-main">
      <ul class="nav navbar-nav navbar-right">
       <% if current_user %>
        <li><%= link_to "Sign out", destroy_user_session_path, :method => :delete %></li>
      <% else %>
        <li><%= link_to('Sign In', new_user_session_path) %></li>
        <li><%= link_to('Register', new_user_registration_path)  %></li>
      <% end %>
      </ul>
      <form class="navbar-form navbar-right" role="search">
      <%= form_tag questions_path, method: :get, :class => "form-inline" do %>
          <%= text_field_tag :query, params[:query], :class => "form-control", placeholder: "Search" %>
          <%= submit_tag "Search", name: nil, class: "btn btn-default" %>
      <% end %>
      </form>
    </div>
  </div>
</div>
<body>
  <header>
    <div class="container">
    <div class="row">
      <div class="col-md-10">
      </div>
      <div class="col-md-1">
        <%= link_to "Questions", questions_path, class: "btn btn-default" %>
      </div>
      <div class="col-md-1">
        <%= link_to "Ask Question", new_question_path, class: "btn btn-primary" %>
      </div>
    </div>
    </div>
  </header>

  <%= yield %>
</body>
<footer></footer>
</html>
