<!DOCTYPE html>
<html>
<head>
  <title>SquirrelOverflow</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div id="nav">
    <div id="brand">
      <a href="/">Squirrel Overflow</a>
    </div>
    <ul id="userlogin">
      <% if current_user %>
        <li id="signout"><a href="/users/signout">Log Out</a></li>
      <% else %>
        <li id="signin"><a href="/users/sign_in">Sign In</a></li>
        <li id="signup"><a href="/users/sign_up">Sign Up</a></li>
      <% end %>
    </ul>
  </div>

<%= yield %>

</body>
</html>
